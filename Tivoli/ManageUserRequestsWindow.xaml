<Window x:Class="Tivoli.ManageUserRequestsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tivoli"
        mc:Ignorable="d"
        Title="ManageUserRequestsWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="UserRequestsDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Username" Binding="{Binding User.Username}" />
                <DataGridTextColumn Header="Full Name" Binding="{Binding User.FullName}" />
                <DataGridTextColumn Header="Email" Binding="{Binding User.Email}" />
                <DataGridTextColumn Header="Workgroup" Binding="{Binding Workgroup.Name}" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="ApproveButton" Content="Approve" Click="ApproveButton_Click" Margin="5" />
            <Button x:Name="RejectButton" Content="Reject" Click="RejectButton_Click" Margin="5" />
        </StackPanel>
    </Grid>

</Window>
